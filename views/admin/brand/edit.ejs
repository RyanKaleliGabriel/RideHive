<%- include("../../partials/admin-header.ejs") %>

<div class="edit-form-container" id="editFormContainer">
    <div class="edit-form-items">
        <p class="err-msg"></p>
        <h2 style="color: white;">Edit this brand</h2><br/>
        <form action="/updateBrand" method="post">
        <input type="hidden" name="brandId" value="<%= brandToEdit.id %>">
        <input value="<%= brandToEdit.name  %>" type="text" name="brandName" class="auth-inputs" autocomplete="none" required>
        <br>
        <button type="submit" class="btn-auth">Update</button>
       </form>
    </div>
</div>

