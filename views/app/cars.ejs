<%- include('../partials/header')  %>
    <!-- Home Page Cars -->
    
    <div class="advanced-search">
      <button onclick="showSearchWindow()" id="advancedSearch" class="btn-home"> Advanced Search</button>
    </div>
    <div id="searchContainer" class="search-container animate__animated animate__zoomIn">
      <div class="search-items">
        <h2 style="color: white;">Advanced Search</h2><br/>
      <form>
        <input type="text" placeholder="Car Name" class="auth-inputs" autocomplete="none">
        <br/>
        <select name="carBrand" id="carBrand">
          <option value="" disabled selected hidden> Brand</option>
          <option value="">Mercedes</option>
          <option value="">Audi</option>
          <option value="">BMW</option>
          <option value="">Toyota</option>
        </select>
        <select name="fuelType" id="fuelType">
          <option value="" disabled selected hidden>Model</option>
          <option value="">Manual</option>
          <option value="">Automatic</option>
        </select>
        <br>
        <br>
        <input type="text" placeholder="Year" class="auth-inputs" autocomplete="none"><br/>
        <input type="text" placeholder="Engine Capacity" class="auth-inputs" autocomplete="none"><br>
        <input type="text" placeholder="Transmission" class="auth-inputs" autocomplete="none"><br>
        <button class="btn-auth" type="submit" id="submitButton"><i class="fa-solid fa-magnifying-glass" style="padding-right:3px ;"></i>Search</button>
        <button onclick="closeSearchWindow()" class="btn-auth" type="submit" id="cancelButton">Close</button>
      </form>
    </div>
    </div>
    <div class="container">
        <div class="flex-items">
          <img class="car-img" src="assets/2015_mercedes-benz_s550_20220826-120.jpeg" alt="" style="width: 50%; height: 50%; text-align: center;"/>
        </div>
        <div class="flex-items">
          <ul class="car-list">
          <h4 style="color: white;"><span>Year</span> Car Name</h4>
          <li class="list-items">Brand: <span class="car-detail">Toyota</span></li>
          <li class="list-items">Model: <span class="car-detail">Camry</span></li>
         </ul>
          <ul class="car-list comments-section">
            <a href="/car" class="btn-more-details">Car Details</a>
          </ul>
        </div>
      </div>

<!-- Home Page Cars -->
<%- include('../partials/footer')  %>